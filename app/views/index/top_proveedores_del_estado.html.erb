 <section class="container">
    <h2>TOP 10 PROVEEDORES DEL ESTADO</h2>
    <button id="top_proveedores_estado_btn" class="boton_json">JSON</button>
    <table class="table" id="top_proveedores_estado">
    <thead>
        <tr>
      <th scope="col" class="text-center">Posici√≥n</th>
        <th scope="col" class="text-center">Rut</th>
        <th scope="col" class="text-center">Nombre proveedor</th>
        <th scope="col" class="text-center">Cantidad de contratos adjudicados</th>
        <th scope="col" class="text-center">Monto total </th>
        <th scope="col" class="text-center">Detalle </th>
        </tr>
    </thead>
    <tbody>
        <% @top10 = 0 %>
        <% @topproveedoresdelestado.each do |t| %>
        <% @top10 += 1 %>
            <tr>
                <td scope="col" class="text-center"> <%= @top10  %></td>
                  <td scope="col" class="text-center">
                    <%= link_to controller: 'buscador', action: 'activo', rut: t[0], tipo: 'activo', desde: '2014-01-01', hasta: '2019-02-02', target: '_blank' do %>
                        <%=  t[0] %>
                    <% end %>
                </td> <!-- Rut -->
                <td scope="col" class="text-center"><%= t[1] %></td>
                <td scope="col" class="text-center"><%= cantidad_de_contratos_adjuntos(t[0]).first[0] %></td> <!-- Cantidad de adjudicaciones -->
                <td scope="col" class="text-center">$<%= t[2].to_s.gsub(/\d(?=(...)+$)/, '\0.') %></td> <!-- Monto total -->
                <td scope="col" class="text-center">
                    <%= link_to controller: 'buscador', action: 'activo', rut: t[0], tipo: 'activo', desde: '2014-01-01', hasta: '2019-02-02', target: '_blank' do %>
                        <i class='fas fa-search'></i>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
    </table>
</section> 
